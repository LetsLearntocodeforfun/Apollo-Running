{
  "name": "apollo-marathon",
  "version": "1.0.0",
  "description": "Apollo â€” all-in-one marathon training with Strava & Garmin",
  "author": "LetsLearntocodeforfun",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:electron",
    "build:web": "vite build --config vite.config.web.ts",
    "build:electron": "cross-env ELECTRON=true vite build",
    "package": "npm run build:electron && electron-builder --publish never",
    "preview": "vite preview",
    "preview:web": "vite preview --config vite.config.web.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "swa": "swa start ./dist --api-location ./api"
  },
  "dependencies": {
    "dexie": "^4.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "jsdom": "^28.1.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.apollo.marathon",
    "productName": "Apollo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "icon": "public/assets/logo-1024.png",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/assets/logo-1024.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.healthcare-fitness",
      "icon": "public/assets/logo-1024.png"
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/assets/logo-1024.png"
    },
    "publish": {
      "provider": "github",
      "owner": "LetsLearntocodeforfun",
      "repo": "Apollo-Running"
    }
  }
}
